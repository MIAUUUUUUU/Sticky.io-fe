// -------------------------
// Base
// -------------------------

*,
*:before,
*:after {
	box-sizing: border-box;
}

html,
body {
	-moz-osx-font-smoothing: grayscale;
	-webkit-font-smoothing: antialiased;
	background-color: darken(light-color, 4);
	color: content-color;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	color: heading-color;
}

a {
	color: link-color;
}

img {
	max-width: 100%;
}

figure {
	margin: 0;
}

main {
	lost-utility: clearfix;
}