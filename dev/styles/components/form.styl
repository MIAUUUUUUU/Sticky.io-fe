.form-group {


    > .input {
        height: 35px;
        border-radius: 5px;
        border: 1px solid darken(light-color, 20%);
        padding: 0 5px;
    }
    
    > .input[type="text"],
    > .input[type="tel"] {
        width: 100%;
    }
    
    > .label {
        display: inline-block;
    }
}